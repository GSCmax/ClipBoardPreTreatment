<Window x:Class="ClipBoardPreTreatment.Views.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipBoardPreTreatment.Views"
        xmlns:vms="clr-namespace:ClipBoardPreTreatment.VModels"
        xmlns:tools="clr-namespace:ClipBoardPreTreatment.Tools"
        mc:Ignorable="d"
        Title="剪切板文本预处理工具 配置"
        Height="450" Width="800"
        MinHeight="450" MinWidth="800">

    <Window.DataContext>
        <vms:ConfigWindowVModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" Margin="10" ItemsSource="{Binding Source={x:Static tools:GlobalDataHelper.appConfig}, Path=RuleItems}"
                  AutoGenerateColumns="False" CanUserSortColumns="False" CanUserReorderColumns="False" CanUserResizeRows="False" CanUserResizeColumns="False"
                  SelectionUnit="FullRow" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="序号" Width="40" IsReadOnly="True" Binding="{Binding RuleIndex}"/>
                <DataGridCheckBoxColumn Header="启用" Width="40" Binding="{Binding RuleEnabled}"/>
                <DataGridTextColumn Header="匹配次数" Width="60" IsReadOnly="True" Binding="{Binding DetectionCount}"/>
                <DataGridTextColumn Header="匹配（正则）" Width="*" Binding="{Binding DetectionRule}"/>
                <DataGridTextColumn Header="操作（正则）" Width="*" Binding="{Binding OperationRule}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="10,0,10,10" Orientation="Vertical">
                <CheckBox Content="全局启用" VerticalAlignment="Center" IsChecked="{Binding Source={x:Static tools:GlobalDataHelper.appConfig}, Path=GlobalEnable, Mode=TwoWay}"/>
                <TextBlock Text="全局匹配次数: 10" VerticalAlignment="Center"/>
            </StackPanel>
            <Button Grid.Column="2" Margin="0,0,10,10" Content="取消" Command="{Binding cancelBTNClickCommand}"/>
            <Button Grid.Column="3" Margin="0,0,10,10" Content="确认" Command="{Binding confirmBTNClickCommand}"/>
        </Grid>
    </Grid>
</Window>
